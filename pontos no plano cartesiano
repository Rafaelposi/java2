import java.util.Scanner;

public class CalculoDistancia {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Bem-vindo ao calculador de distância entre dois pontos!");
        System.out.print("Informe a coordenada x do primeiro ponto (P1): ");
        double x1 = scanner.nextDouble();
        System.out.print("Informe a coordenada y do primeiro ponto (P1): ");
        double y1 = scanner.nextDouble();

        System.out.print("Informe a coordenada x do segundo ponto (P2): ");
        double x2 = scanner.nextDouble();
        System.out.print("Informe a coordenada y do segundo ponto (P2): ");
        double y2 = scanner.nextDouble();

        double distancia = Math.sqrt(Math.pow(x1 - x2, 2) + Math.pow(y1 - y2, 2));

        System.out.println("\nA distância entre os pontos P1 e P2 é: " + distancia);

        scanner.close();
    }
}
